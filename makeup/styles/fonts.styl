$defaultFont = "Myriad Pro", Helvetica, Arial, sans-serif
$fontSize       = 14px

smallFont()
    font-size   : .85em
    font-weight : normal
    
defaultFont()
    font-size   : $font-size
    
boldFont()
    font-size   : 1.2em;
    font-weight : 600
    
headerFont()
    font-size 1.5em
    font-weight 400
    
textFont()
    font-size 1.1em

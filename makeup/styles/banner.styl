.banner
	width:100%
	height: 150px
	
	&__wrapper
		display flex
		flex-direction row
		flex-wrap nowrap
		width 100%
		height 100%
	
	&__item
		width 100%
		height 100%
		flex-shrink 0
		
		^[0]_started &
			height: 0
		
.banner-item
	height : 100%
	display flex
	align-items: center
	justify-content center
	
	&__text
		color: $grayFontColor
		text-align left
		text-shadow 0 0 5px rgba(0,0,0,0.5)
	
		&__header
			headerFont()
			
		&__text
			margin-top 10px
			defaultFont()
			white-space pre
.order-form
	
	&__item
		padding-bottom 20px
		font-size 1.1em
		
	&__label
		display block
		padding-bottom 5px
		
	&__input
	&__textarea
		font-size inherit
		font-family inherit
		line-height inherit
		font-weight inherit
		padding 5px 10px
		display block
		width 100%
		box-sizing border-box
		border 0
		background-color $grayColor
		border-radius 2px
		
	&__textarea
		min-height 100px
		resize vertical
		padding 10px
		
	&__submit
		border 0
		background-color $activeColor
		border-radius 2px
		width 100%
		height 50px
		color white
		font-size 1.1em
		cursor pointer
		
		&:hover
			background-color $brightColor
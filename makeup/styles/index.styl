@import fonts
@import colors

body
	font: $fontSize $defaultFont
	color: $fontColor
	margin: 0
	
.__wrapper
	position relative
	margin-left auto
	margin-right auto

	@media screen and (min-width: 1000px)
		width 960px
	@media screen and (min-width: 1200px)
		width 1100px

@import header
@import basket
@import '../blocks/banner/banner'


.main
	margin 80px 0 0 0
	
	&__wrapper
		display flex
		flex-direction row

$sidebarWidth = 260px
.sidebar
	~ .main-container
		margin-left 30px
		
.main-container
	flex-grow 1
	position relative
	
.text-block
	textFont()
	
h1
	headerFont()
		
.vendors
	white-space nowrap
	position absolute
	overflow hidden
	width 100%
	
	> img
		margin-right 5px
		
		&:last-child
			margin-right 0
			
	&::after
		content ''
		display block
		position absolute
		right 0
		top 0
		height 100%
		width 70%
		background-image linear-gradient(to right, rgba(255,255,255,0), rgba(255,255,255,1))
		
		

@import '../blocks/groups/groups'
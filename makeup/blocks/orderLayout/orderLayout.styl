.order-layout
	padding-top 30px
	display flex
	flex-flow row wrap
	
	
	&__left
		width 500px
		
		@media screen and (max-width: $md)
			width 450px
			
		@media screen and (max-width: $sm)
			width 350px
		
		@media screen and (max-width: $xs)
			width 100%
		
	&__main
		flex-grow 1
		padding-left 40px
		
		@media screen and (max-width: $xs)
			padding-left 0
			padding-top 50px
	
	&__message
		font-size 1.4em;
		text-align center